<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:textColorHint">@color/icon_black</item>
        <item name="android:drawableTint">@color/icon_black</item>
        <item name="android:tint">@color/icon_black</item>
    </style>

    <style name="trackViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/low_low_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="nothingWasFoundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/ic_nothing_was_found_dark_120</item>
    </style>

    <style name="communicationProblemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/ic_communications_problem_dark_120</item>
    </style>

    <style name="playButtonStyle">
        <item name="android:layout_width">@dimen/big_button</item>
        <item name="android:layout_height">@dimen/big_button</item>
        <item name="android:layout_marginTop">@dimen/long_padding</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:src">@drawable/play_dark</item>
    </style>

    <style name="pauseButtonStyle">
        <item name="android:layout_width">@dimen/big_button</item>
        <item name="android:layout_height">@dimen/big_button</item>
        <item name="android:layout_marginTop">@dimen/long_padding</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:src">@drawable/pause_dark</item>
    </style>

    <style name="addButtonStyle">
        <item name="android:layout_width">@dimen/small_button</item>
        <item name="android:layout_height">@dimen/small_button</item>
        <item name="android:layout_marginTop">@dimen/small_button</item>
        <item name="android:layout_marginStart">@dimen/long_padding</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:src">@drawable/ic_add_dark_51</item>
    </style>

    <style name="likeButtonStyle">
        <item name="android:layout_width">@dimen/small_button</item>
        <item name="android:layout_height">@dimen/small_button</item>
        <item name="android:layout_marginTop">@dimen/small_button</item>
        <item name="android:layout_marginEnd">@dimen/long_padding</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:src">@drawable/ic_like_dark_51</item>
    </style>

</resources>